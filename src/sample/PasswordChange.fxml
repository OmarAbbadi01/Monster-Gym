<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="360.0"
           prefWidth="320.0" style="-fx-border-color: black; -fx-border-width: 0;"
           xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="sample.Controller">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <children>
                <Label fx:id="passwordChangeStatusLabel" alignment="CENTER" text="تغيير كلمة المرور"
                       textAlignment="CENTER">
                    <font>
                        <Font name="Calibri Bold" size="34.0"/>
                    </font>
                </Label>
                <TextField maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                           prefHeight="0.0" prefWidth="0.0"/>
                <PasswordField fx:id="oldPasswordField" alignment="CENTER" promptText="كلمة المرور القديمة"
                               style="-fx-background-color: black; -fx-text-inner-color: white;">
                    <font>
                        <Font name="Calibri Bold" size="20.0"/>
                    </font>
                </PasswordField>
                <PasswordField fx:id="newPasswordField" alignment="CENTER" promptText="كلمة المرور الجديدة"
                               style="-fx-background-color: black; -fx-text-inner-color: white;">
                    <font>
                        <Font name="Calibri Bold" size="20.0"/>
                    </font>
                </PasswordField>
                <PasswordField fx:id="newPasswordConfirmFeild" alignment="CENTER" promptText="تأكيد كلمة المرور الجديدة"
                               style="-fx-background-color: black; -fx-text-inner-color: white;">
                    <font>
                        <Font name="Calibri Bold" size="20.0"/>
                    </font>
                </PasswordField>
                <Region prefHeight="23.0" prefWidth="280.0"/>
                <Button fx:id="changePasswordButton" mnemonicParsing="false" style="-fx-background-color: black;"
                        text="تغيير كلمة المرور" textFill="WHITE">
                    <font>
                        <Font name="Calibri Bold" size="18.0"/>
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</StackPane>
